<Window
    RequestedThemeVariant="Light"
    Title="NavigateAppWindow"
    Width="800"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="PracticeAvalonia.Views.NavigateAppWindow"
    x:DataType="vm:NavigationAppViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    xmlns:vm="using:PracticeAvalonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:NavigationAppViewModel />
    </Design.DataContext>


    <Grid RowDefinitions="Auto,*,Auto">
        <!--  Navigation Menu  -->
        <Border
            Classes="main-card-inset"
            Grid.Row="0"
            Margin="25"
            Padding="20">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!--  Navigation Buttons  -->
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="15">
                    <Button
                        Classes="action-btn"
                        Command="{Binding NavigateToHomeCommand}"
                        Content="ðŸ  Home" />
                    <Button
                        Classes="action-btn"
                        Command="{Binding NavigateToUsersListCommand}"
                        Content="ðŸ‘¥ Users" />
                    <Button
                        Classes="action-btn"
                        Command="{Binding NavigateToProductsListCommand}"
                        Content="ðŸ“¦ Products" />
                </StackPanel>

                <!--  User Info or Settings  -->
                <StackPanel
                    Grid.Column="2"
                    Orientation="Horizontal"
                    Spacing="10">
                    <Button Classes="filter-btn" Content="âš™ï¸ Settings" />
                    <Border
                        Background="LightGreen"
                        Classes="status-available"
                        VerticalAlignment="Center">
                        <TextBlock
                            Classes="accent"
                            FontSize="10"
                            Foreground="DimGray"
                            Text="Online" />
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Content Area  -->
        <Border Grid.Row="1">
            <ScrollViewer>
                <ContentControl
                    Content="{Binding CurrentViewModel}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
            </ScrollViewer>
        </Border>

        <!--  Status Bar  -->
        <Border Grid.Row="2">
            <TextBlock Text="{Binding CurrentViewModel, StringFormat='Current View: {0}'}" VerticalAlignment="Center" />
        </Border>
    </Grid>

</Window>
