<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="PracticeAvalonia.Views.SettingsView"
    x:DataType="vm:SettingsViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PracticeAvalonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="20">
        <TextBlock
            FontSize="24"
            FontWeight="Bold"
            Text="Settings" />
        <CheckBox Content="Enable Notifications" IsChecked="{Binding NotificationsEnabled}" />
        <CheckBox Content="Dark Mode" IsChecked="{Binding DarkModeEnabled}" />
    </StackPanel>

</UserControl>
