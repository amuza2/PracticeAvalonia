<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="PracticeAvalonia.Views.EditProductView"
    x:DataType="vm:EditProductViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:vm="using:PracticeAvalonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:EditProductViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="20">
            <!--  header section  -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button
                    Classes="filter-btn"
                    Command="{Binding GoBackCommand}"
                    Content="â† Cancel" />
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Edit Product"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!--  Form section  -->
            <Border Margin="0,20,0,0" Padding="20">
                <Grid
                    ColumnDefinitions="Auto, *"
                    ColumnSpacing="15"
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                    RowSpacing="15">
                    <TextBlock
                        FontWeight="Bold"
                        Text="Name:"
                        VerticalAlignment="Center" />
                    <TextBox
                        Grid.Column="1"
                        Grid.Row="0"
                        Text="{Binding Name}"
                        Watermark="Enter product name" />

                    <TextBlock
                        FontWeight="Bold"
                        Grid.Column="0"
                        Grid.Row="1"
                        Text="Price:"
                        VerticalAlignment="Center" />
                    <TextBox
                        Grid.Column="1"
                        Grid.Row="1"
                        Text="{Binding Price}"
                        Watermark="Enter product price" />

                    <TextBlock
                        FontWeight="Bold"
                        Grid.Column="0"
                        Grid.Row="2"
                        Text="Category:"
                        VerticalAlignment="Center" />
                    <TextBox
                        Grid.Column="1"
                        Grid.Row="2"
                        Text="{Binding Category}"
                        Watermark="Enter product category" />

                    <TextBlock
                        FontWeight="Bold"
                        Grid.Column="0"
                        Grid.Row="3"
                        Text="Description:"
                        VerticalAlignment="Center" />
                    <TextBox
                        Grid.Column="1"
                        Grid.Row="3"
                        Text="{Binding Description}"
                        Watermark="Enter product description" />

                    <StackPanel
                        Grid.Column="1"
                        Grid.Row="4"
                        Orientation="Horizontal"
                        Spacing="10">
                        <Button
                            Classes="filter-btn"
                            Command="{Binding SaveProductCommand}"
                            Content="Save Changes" />
                        <Button
                            Classes="filter-btn"
                            Command="{Binding GoBackCommand}"
                            Content="Cancel" />

                        <!--  Loading State  -->
                        <StackPanel
                            HorizontalAlignment="Center"
                            IsVisible="{Binding IsSaving}"
                            VerticalAlignment="Center">
                            <StackPanel>
                                <Border Padding="20">
                                    <ui:ProgressRing
                                        BorderThickness="10"
                                        Height="100"
                                        IsIndeterminate="True"
                                        Width="100" />
                                </Border>
                            </StackPanel>

                            <TextBlock
                                HorizontalAlignment="Center"
                                Margin="0,10"
                                Text="Saving Product..." />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl>
