<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="PracticeAvalonia.Views.HomeView"
    x:DataType="vm:HomeViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PracticeAvalonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:HomeViewModel />
    </Design.DataContext>

    <StackPanel Margin="20" Spacing="15">
        <TextBlock
            FontSize="28"
            FontWeight="Bold"
            Text="Navigating between views @CodingIsAmazing" />

        <TextBlock
            FontSize="14"
            Text="This demo shows how to navigate between pages and pass parameters between them in Avalonia MVVM applications."
            TextWrapping="Wrap" />
    </StackPanel>

</UserControl>
