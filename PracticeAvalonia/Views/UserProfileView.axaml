<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="PracticeAvalonia.Views.UserProfileView"
    x:DataType="vm:UserProfileViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:vm="using:PracticeAvalonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:UserProfileViewModel />
    </Design.DataContext>

    <Grid>
        <!--  Loading State  -->
        <StackPanel
            HorizontalAlignment="Center"
            IsVisible="{Binding IsLoading}"
            VerticalAlignment="Center">
            <StackPanel>
                <Border Padding="20">
                    <ui:ProgressRing
                        BorderThickness="10"
                        Height="100"
                        IsIndeterminate="True"
                        Width="100" />
                </Border>
            </StackPanel>

            <TextBlock
                HorizontalAlignment="Center"
                Margin="0,10"
                Text="Loading user..." />
        </StackPanel>

        <!--  User Data  -->
        <ScrollViewer IsVisible="{Binding !IsLoading}">
            <StackPanel Margin="20" Spacing="15">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button
                        Classes="filter-btn"
                        Command="{Binding GoBackCommand}"
                        Content="â† Back" />
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Text="User Profile"
                        VerticalAlignment="Center" />
                </StackPanel>

                <Border CornerRadius="8" Padding="15">
                    <Grid
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="15"
                        RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                        RowSpacing="10">
                        <TextBlock
                            FontWeight="SemiBold"
                            Grid.Column="0"
                            Grid.Row="0"
                            Text="ID:" />
                        <TextBlock
                            Grid.Column="1"
                            Grid.Row="0"
                            Text="{Binding User.Id}" />

                        <TextBlock
                            FontWeight="SemiBold"
                            Grid.Column="0"
                            Grid.Row="1"
                            Text="Name:" />
                        <TextBlock
                            Grid.Column="1"
                            Grid.Row="1"
                            Text="{Binding User.Name}" />

                        <TextBlock
                            FontWeight="SemiBold"
                            Grid.Column="0"
                            Grid.Row="2"
                            Text="Email:" />
                        <TextBlock
                            Grid.Column="1"
                            Grid.Row="2"
                            Text="{Binding User.Email}" />

                        <TextBlock
                            FontWeight="SemiBold"
                            Grid.Column="0"
                            Grid.Row="3"
                            Text="Department:" />
                        <TextBlock
                            Grid.Column="1"
                            Grid.Row="3"
                            Text="{Binding User.Department}" />

                        <TextBlock
                            FontWeight="SemiBold"
                            Grid.Column="0"
                            Grid.Row="4"
                            Text="Created:" />
                        <TextBlock
                            Grid.Column="1"
                            Grid.Row="4"
                            Text="{Binding User.CreatedDate, StringFormat='{}{0:yyyy-MM-dd}'}" />
                    </Grid>
                </Border>

                <Button
                    Classes="filter-btn"
                    Command="{Binding EditUserCommand}"
                    Content="Edit User"
                    HorizontalAlignment="Left" />
            </StackPanel>
        </ScrollViewer>
    </Grid>

</UserControl>
