<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="PracticeAvalonia.Views.AddUserView"
    x:DataType="vm:AddUserViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:vm="using:PracticeAvalonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:AddUserViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <!--  Header section  -->
        <StackPanel Margin="20" Spacing="20">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button
                    Classes="filter-btn"
                    Command="{Binding CancelCommand}"
                    Content="â† Cancel" />
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Add User"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!--  Main Form section  -->
            <Border Padding="20">
                <Grid
                    ColumnDefinitions="Auto,*"
                    ColumnSpacing="15"
                    RowDefinitions="Auto,Auto,Auto,Auto, Auto"
                    RowSpacing="15">

                    <TextBlock
                        FontWeight="SemiBold"
                        Grid.Column="0"
                        Grid.Row="0"
                        Text="Name:"
                        VerticalAlignment="Center" />
                    <TextBox
                        Grid.Column="1"
                        Grid.Row="0"
                        Text="{Binding Name}"
                        Watermark="Enter user name" />

                    <TextBlock
                        FontWeight="SemiBold"
                        Grid.Column="0"
                        Grid.Row="1"
                        Text="Email:"
                        VerticalAlignment="Center" />
                    <TextBox
                        Grid.Column="1"
                        Grid.Row="1"
                        Text="{Binding Email}"
                        Watermark="Enter email address" />

                    <TextBlock
                        FontWeight="SemiBold"
                        Grid.Column="0"
                        Grid.Row="2"
                        Text="Department:"
                        VerticalAlignment="Center" />

                    <TextBox
                        Grid.Column="1"
                        Grid.Row="2"
                        Text="{Binding Department}"
                        Watermark="Enter department" />

                    <TextBlock
                        FontWeight="SemiBold"
                        Grid.Column="0"
                        Grid.Row="3"
                        Text="Created Date:"
                        VerticalAlignment="Center" />
                    <!--  date picker  -->
                    <DatePicker
                        Grid.Column="1"
                        Grid.Row="3"
                        SelectedDate="{Binding CreatedDate}" />

                    <StackPanel
                        Grid.Column="1"
                        Grid.Row="4"
                        Orientation="Horizontal"
                        Spacing="10">
                        <Button
                            Classes="filter-btn"
                            Command="{Binding AddUserCommand}"
                            Content="Add User"
                            IsEnabled="{Binding !IsAddingUser}" />
                        <Button
                            Classes="filter-btn"
                            Command="{Binding CancelCommand}"
                            Content="Cancel"
                            IsEnabled="{Binding !IsAddingUser}" />
                        <!--  Loading State  -->
                        <StackPanel
                            HorizontalAlignment="Center"
                            IsVisible="{Binding IsAddingUser}"
                            VerticalAlignment="Center">
                            <StackPanel>
                                <Border Padding="20">
                                    <ui:ProgressRing
                                        BorderThickness="10"
                                        Height="100"
                                        IsIndeterminate="True"
                                        Width="100" />
                                </Border>
                            </StackPanel>

                            <TextBlock
                                HorizontalAlignment="Center"
                                Margin="0,10"
                                Text="Loading user..." />
                        </StackPanel>
                        <TextBlock
                            IsVisible="{Binding IsAddingUser}"
                            Text="Adding..."
                            VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl>
