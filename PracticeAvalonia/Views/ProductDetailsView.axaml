<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="PracticeAvalonia.Views.ProductDetailsView"
    x:DataType="vm:ProductDetailsViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PracticeAvalonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:ProductDetailsViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button
                    Classes="filter-btn"
                    Command="{Binding GoBackCommand}"
                    Content="â† Back" />
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Product Details"
                    VerticalAlignment="Center" />
            </StackPanel>

            <Border CornerRadius="8" Padding="20">
                <Grid
                    ColumnDefinitions="Auto,*"
                    ColumnSpacing="20"
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                    RowSpacing="12">

                    <TextBlock
                        FontWeight="SemiBold"
                        Grid.Column="0"
                        Grid.Row="0"
                        Text="Product ID:" />
                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="0"
                        Text="{Binding Product.Id}" />

                    <TextBlock
                        FontWeight="SemiBold"
                        Grid.Column="0"
                        Grid.Row="1"
                        Text="Name:" />
                    <TextBlock
                        FontSize="18"
                        Grid.Column="1"
                        Grid.Row="1"
                        Text="{Binding Product.Name}" />

                    <TextBlock
                        FontWeight="SemiBold"
                        Grid.Column="0"
                        Grid.Row="2"
                        Text="Category:" />
                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="2"
                        Text="{Binding Product.Category}" />

                    <TextBlock
                        FontWeight="SemiBold"
                        Grid.Column="0"
                        Grid.Row="3"
                        Text="Price:" />
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Grid.Column="1"
                        Grid.Row="3"
                        Text="{Binding Product.Price, StringFormat='${0:F2}'}" />

                    <TextBlock
                        FontWeight="SemiBold"
                        Grid.Column="0"
                        Grid.Row="4"
                        Text="Description:"
                        VerticalAlignment="Top" />
                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="4"
                        Text="{Binding Product.Description}"
                        TextWrapping="Wrap" />
                </Grid>
            </Border>

            <!--  Order Section  -->
            <Border CornerRadius="8" Padding="15">
                <StackPanel Spacing="10">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Order Details" />

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Quantity:" VerticalAlignment="Center" />
                        <NumericUpDown
                            FormatString="0"
                            Maximum="99"
                            Minimum="1"
                            Value="{Binding Quantity}" />
                        <TextBlock Text="x" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Product.Price, StringFormat='${0:F2}'}" VerticalAlignment="Center" />
                        <TextBlock Text="=" VerticalAlignment="Center" />
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Text="{Binding TotalPrice, StringFormat='${0:F2}'}"
                            VerticalAlignment="Center" />
                    </StackPanel>

                    <Button
                        Classes="filter-btn"
                        Command="{Binding AddToCartCommand}"
                        Content="Add to Cart"
                        HorizontalAlignment="Left" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl>
